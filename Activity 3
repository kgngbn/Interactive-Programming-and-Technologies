void loop()
{
  Serial.print("LED LIGHT SHOW\n");
  Serial.print("Please enter 1, 2, or 3.\n");
  while (Serial.available() == 0)
  {
  }
  int select = Serial.parseInt();
  switch (select) {
  case 1:
      LedLightShow1();
    break;
  case 2:
      LedLightShow2();
    break;
  case 3:
      LedLightShow3();
    break;
          
}
}
